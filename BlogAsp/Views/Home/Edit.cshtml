@model BlogAsp.Models.User

@{
    ViewData["Title"] = "Изменение пользователя";
}
<form asp-controller="Home" asp-action="Edit">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <input type="email" asp-for="Email" placeholder="Enter email" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" asp-for="Login" placeholder="Enter login" class="form-control">
    </div>
    <div class="form-group">
        <input type="Text" asp-for="Password" placeholder="Enter password" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="form-control">
    </div>
</form>